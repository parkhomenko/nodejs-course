{
  "name": "node-js-course",
  "version": "1.0.0",
  "description": "Node JS Lohika Course",
  "scripts": {
    "start": "npm run dev",
    "test": "ava",
    "eslint": "./node_modules/.bin/eslint src test",
    "eslint:fix": "./node_modules/.bin/eslint src test --fix",
    "security": "nsp check",
    "check": "npm-run-all --parallel eslint security test",
    "db:start": "npm-run-all db:start:container db:migrate db:seed",
    "db:stop": "npm-run-all db:seed:undo db:migrate:undo db:stop:container",
    "db:install": "docker run --name mysql-server -p 3308:3306 -e MYSQL_DATABASE=library -e MYSQL_ROOT_PASSWORD=qwerty -d mysql:latest",
    "db:uninstall": "docker rm mysql-server",
    "db:start:container": "docker start mysql-server",
    "db:stop:container": "docker stop mysql-server",
    "db:migrate": "./node_modules/.bin/sequelize db:migrate",
    "db:migrate:undo": "./node_modules/.bin/sequelize db:migrate:undo",
    "db:seed": "./node_modules/.bin/sequelize db:seed:all",
    "db:seed:undo": "./node_modules/.bin/sequelize db:seed:undo:all",
    "prepush": "npm run test",
    "precommit": "npm run check",
    "localtunnel": "lt --port 3000 --subdomain stas",
    "share": "npm-run-all --parallel start localtunnel",
    "dev": "nodemon ./src/server/app.js",
    "prod": "NODE_ENV=production node ./src/server/app.js",
    "start:prod": "npm run db:migrate && npm run db:seed || true && prod",
    "start:lb": "docker-compose up --build --scale library=3"
  },
  "author": "Stanislav Parkhomenko",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "chalk": "^2.3.0",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "express-fileupload": "^0.3.0",
    "fs": "0.0.1-security",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "morgan": "^1.9.0",
    "mysql2": "^1.5.1",
    "open": "0.0.5",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "path": "^0.12.7",
    "rotating-file-stream": "^1.3.4",
    "sequelize": "^4.28.6",
    "sequelize-cli": "^3.2.0",
    "swagger-jsdoc": "^1.9.7",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "nodemon": "^1.14.3",
    "npm-run-all": "^4.1.2",
    "supertest": "^3.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "static/*",
      "loadbalancer/*"
    ],
    "delay": "2500"
  }
}
